<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageViewStudent"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="namenamenamenamename"
        android:layout_toRightOf="@+id/imageViewStudent"
        style="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="namenamenamenamename"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageViewStudent"
        android:layout_below="@+id/textViewName"
        style="@style/TextAppearance.AppCompat.Small"/>

    <TextView
        android:id="@+id/textViewCgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="namenamenamenamename"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageViewStudent"
        android:layout_below="@+id/textViewEmail"
        style="@style/TextAppearance.AppCompat.Small"/>

    <ImageView
        android:id="@+id/imageButtonCall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/call"
        android:layout_alignBottom="@+id/textViewCgpa"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>